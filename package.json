  "repository": {
    "type": "git",
    "url": "git+https://github.com/sshaporov/mytasks-backend.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sshaporov/mytasks-backend/issues"
  },
  "homepage": "https://github.com/sshaporov/mytasks-backend#readme",
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/node": "^14.14.20",
    "eslint": "^7.17.0",
    "eslint-plugin-import": "^2.22.1",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
